<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <record id="hr_employee_from_view" model="ir.ui.view">
            <field name="name">hr.employee.from.view</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="hr_announcement_smart_button" string="Announcement" type="object"
                            class="oe_stat_button" icon="fa-bullhorn">
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>

